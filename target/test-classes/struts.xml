<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="user" extends="struts-default" namespace="/">
		<action name="showUser" class="com.yll.ssm.controller.UserAction" method="showUser">
			<result name="success">views/success.jsp</result>
			<result name="error">views/error.jsp</result>
		</action>
		
		<action name="addUser" class="com.yll.ssm.controller.UserAction" method="addUser">
			<result name="success">success.jsp</result>
			<result name="error">error.jsp</result>
		</action>
		
		<action name="queryUser" class="com.yll.ssm.controller.UserAction" method="queryUser">
			<result name="success">success.jsp</result>
			<result name="error">error.jsp</result>
		</action>
		
		<action name="alterUser" class="com.yll.ssm.controller.UserAction" method="alterUser">
			<result name="success">success.jsp</result>
			<result name="error">error.jsp</result>
		</action>
		
		<action name="deleteUser" class="com.yll.ssm.controller.UserAction" method="deleteUser">
			<result name="success">success.jsp</result>
			<result name="error">error.jsp</result>
		</action>
	</package>
</struts>